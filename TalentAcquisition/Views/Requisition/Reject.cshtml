@model TalentAcquisition.Core.Domain.JobRequisition

@{
    ViewBag.Title = "Reject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="mainbody">
    <div class="container-fluid">
        <div class="col-md-3">
            <div class="">
                <ul class="nav">
                    @Html.Partial("_AdminDashboardSidebar")
                </ul>
            </div>
        </div>
        <div class="col-md-9">
            <div style="padding-top:1em;"></div>
            <p style="font-family: 'Fira Mono';font-size: 22px;">Reject Requisition</p>
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Dashboard", "Admin")">Home</a></li>
                <li><a href="@Url.Action("Requisitionmanager", "Admin")">Requisition Manager</a></li>
                <li class="active">Reject Requisition</li>
                <li class="active">@Model.RequisitionNo</li>
            </ol>
            <section class="" style="margin:-2px">
                <!--Comment-->
                <span class="alert-danger">@ViewBag.Message</span>
                <style>
                    select, input {
                        min-width: 100%;
                        width: 100%;
                    }

                    select {
                        margin-left: 0px;
                    }

                    label {
                        font-size: 90%;
                    }

                    dd, dt {
                        margin: 0.5em;
                    }
                    h5 
                    {
                       color: #428bca !important;
                       text-decoration: none !important;
                    }

                    a 
                    {
                        text-decoration: none !important;
                    }

                    a:hover
                    {
                        color: #2a6496 !important;
                        text-decoration: none !important;
                    }
                </style>
                <div class="container-fluid">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <a data-toggle="collapse" href="#collapse3"><h5 style="font-weight:bold"> Rejection Note</h5></a>
                            </div>
                        </div>
                        <div id="collapse3" class="panel-collapse collapse">
                            <div class="panel-body">
                                <section>
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.HiddenFor(model => model.JobRequisitionID)
                                        <div class="form-horizontal">
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    <textarea class="form-control" rows="5" id="RejectionNote" name="RejectionNote" placeholder="Enter Reason why Requisition is rejected"></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="container col-md-offset-8" style="margin-top:1em">
                                                    <input type="submit" value="Request Modification" class="btn btn-default btn-default" />
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </section>
                            </div>
                        </div>
                    </div>

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <a data-toggle="collapse" href="#collapse4"><h5 style="font-weight:bold">  Requisition Summary</h5></a>
                            </div>
                        </div>
                        <div id="collapse4" class="panel-collapse collapse">
                            <div class="panel-body" style="margin-top:-1.5em">
                                <section>
                                    <dl class="">
                                        <dt>
                                            @Html.DisplayNameFor(model => model.JobTitle)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.JobTitle)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Location)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Location)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Status)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Status)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.NoOfPositionsAvailable)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.NoOfPositionsAvailable)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.JobDescription)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.JobDescription)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.AgeLimit)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.AgeLimit)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.EducationalRequirements)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.EducationalRequirements)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.JobResponsibilities)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.JobResponsibilities)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.YearsOfExperience)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.YearsOfExperience)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.PublishedDate)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.PublishedDate)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.StartDate)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.StartDate)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.ClosingDate)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.ClosingDate)
                                        </dd>

                                    </dl>
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            </div>
        </div>
    </section>



