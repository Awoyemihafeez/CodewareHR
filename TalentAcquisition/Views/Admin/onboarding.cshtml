                        <div class="panel-heading">
                            <div class="panel-title">
                                <a data-toggle="collapse" href="#collapse1"> <h5 style="font-weight:bold"> Onboarding Templates</h5></a>
                            </div>
                        </div>
                        <div id="collapse1" class="panel-collapse collapse in">
                            <div class="panel-body">
                                <a href="@Url.Action("Template/create","Onboarding")" style="padding:0.6em;margin-bottom: 2em;  border-radius:10px" class="btn btn-default btn-xs"><img src="~/Assets/Icons/File-Plus.png" width="20" />Create Template</a>
