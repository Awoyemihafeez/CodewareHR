                        </div>
                        <div id="collapse2" class="panel-collapse collapse in">
                            <div class="panel-body">
                                @Html.Action("_GetAllncomingOnboardings", "Onboarding")
                            </div>
                        </div>
                        </div>
                </div>
                <div class="row">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <a data-toggle="collapse" href="#collapse3"> <h5 style="font-weight:bold"> Active Onboarding</h5></a>
                            </div>
                        </div>
                        <div id="collapse3" class="panel-collapse collapse in">
                            <div class="panel-body">
                                @Html.Action("_GetAllActiveOnboardings", "Onboarding")
                            </div>
