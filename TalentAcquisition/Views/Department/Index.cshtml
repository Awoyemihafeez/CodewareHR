@model IEnumerable<TalentAcquisition.Core.Domain.Department>

@{
    ViewBag.Title = "Manage Departments";
    Layout = "~/Views/Shared/_NormalLayout.cshtml";
}
<ol class="breadcrumb">
    <li><a href="@Url.Action("Dashboard","Admin")">Home</a></li>
    <li class="active">Departments</li>
    <li class="active">All</li>
</ol>

<section class="container">
    <div class="row">
        <p>
            <a href="/Admin/manage_departments/Create" style="padding:0.6em; border-radius:10px" class="btn btn-default btn-xs"><img src="~/Assets/Icons/File-Plus.png" width="15" />  Create New Department</a>
        </p>
    </div>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                <p class="panel-title">
                    <a data-toggle="collapse" href="#main" style="text-decoration:none">All Departments</a>
                </p>
            </div>
            <div id="main" class="panel-collapse collapse in">
                <div class="panel-body"  style="overflow-y:scroll;height:300px">
                    <table class="table" style="color:black">
                        <tr>
                            <th>
                                @*@Html.DisplayNameFor(model => model.DepartmentName)*@
                                <h5 style="font-weight:bold">Department Name</h5>
                            </th>
                            <th>
                                <h5 style="font-weight:bold">Modifications</h5>
                            </th>
                        </tr>
                
                            
                       

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DepartmentName)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.DepartmentID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.DepartmentID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.DepartmentID })
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>
        </div>
    </div>

</section>


