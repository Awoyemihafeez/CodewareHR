
@{
    ViewBag.Title = "Appraisal Period";
    Layout = "~/Views/Shared/_NormalLayout.cshtml";
}


<ol class="breadcrumb">
    <li><a href="@Url.Action("Dashboard","Admin")">Home</a></li>
    @*<li><a href="#">Private</a></li>*@
    @*<li><a href="#">Pictures</a></li>*@
    <li class="active">Performance</li>
    <li class="active">Appraisal Period</li>
</ol>
<section class="container-fluid">
    <div class="container-fluid">
        <div class="">
            @*<div class="panel-heading">
                <p class="">Appraisal Period</p>
            </div>*@
            <div class="y">
                <div ng-controller="AppraisalPeriodController" ng-init="init()" class="row container">
                    <button type="button" id="Mexico" style="float:right;margin-bottom: 10px;" class="btn btn-info btn-sm" ng-click="addGrievanceType()">Add Appraisal Grade</button>
           
                    <form id="empform" ng-submit="submitGrievanceTypes()">
                        <table id="mytable" class="table table-striped" style="border:1px solid lightgrey;    font-size: 90%;">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Code</th>
                                    <th>Description</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Closed</th>
                                    <th>Modification</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="type in grievanceTypes">
                                    <td>{{$index+1}}</td>
                                    <td>
                                        <input class="form-control input-sm" name="Code{{$index}}" ng-model="type.Code"
                                               ng-disabled="!enabledEdit[{{$index}}]" />
                                    </td>
                                    <td>
                                        <input class="form-control input-sm" name="Description{{$index}}" ng-model="type.Description" ng-disabled="!enabledEdit[{{$index}}]" />
                                    </td>
                                    <td><input type="text" class="form-control input-sm myDate" ng-init="type.StartDate= parseDate(type.StartDate)" name="StartDate{{$index}}" ng-model="type.StartDate"
                                               ng-disabled="!enabledEdit[{{$index}}]" /></td>
                                    <td><input type="text" class="form-control input-sm myDate" ng-init="type.EndDate= parseDate(type.EndDate)" name="EndDate{{$index}}" ng-model="type.EndDate"
                                               ng-disabled="!enabledEdit[{{$index}}]" /></td>
                                    <td><input type="checkbox" class="input-sm" name="Closed{{$index}}" ng-model="type.Closed"
                                               ng-disabled="!enabledEdit[{{$index}}]"/></td>
                                    <td>
                                        <div class="">
                                            <a class="" style="cursor:pointer" ng-click="edit($index)">Edit</a>
                                            <a class="" style="cursor:pointer" ng-click="delete($index)">Delete</a>
                                        </div>
                                    </td>
                                </tr>

                            </tbody>

                        </table>
                        <input type="submit" class="btn btn-primary" value="Submit" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(function () {
        $(".myDate").datepicker({
            dateFormat: 'dd-mm-yy'
        });
        $("#Mexico").on("click", function (e) {
           // alert("Vie");
            $(".myDate").datepicker({
                dateFormat: 'dd-mm-yy'
            });
        });
       
    });
</script>