
@{
    ViewBag.Title = "Appraisal Grade";
    Layout = "~/Views/Shared/_NormalLayout.cshtml";
}


@*<p style="font-size: 22px;">Appraisal Grade</p>*@
<ol class="breadcrumb">
    <li><a href="@Url.Action("Dashboard","Admin")">Home</a></li>
    @*<li><a href="#">Private</a></li>*@
    @*<li><a href="#">Pictures</a></li>*@
    <li class="active">Performance</li>
    <li class="active">Appraisal Grade</li>
</ol>
<section class="container-fluid">
    <div class="container-fluid">
        <div class="">
            @*<div class="panel-heading">
                <p class="">Appraisal Grade</p>
            </div>*@
            <div class="">
                <div ng-controller="AppraisalGradeController" ng-init="init()" >
                    <button type="button" id="Mexico" style="float:right;margin-bottom: 10px;" class="btn btn-info btn-sm" ng-click="addGrievanceType()">Add Appraisal Grade</button>
            
                    <form id="empform" ng-submit="submitGrievanceTypes()">
                        <table id="mytable" class="table table-striped" style="border:1px solid lightgrey">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Grade Name</th>
                                    <th>Grade Value</th>
                                    <th>Modification</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="type in grievanceTypes">
                                    <td>{{$index+1}}</td>
                                    <td>
                                        <input class="form-control input-sm" name="Name{{$index}}" ng-model="type.Name"
                                               ng-disabled="!enabledEdit[{{$index}}]" />
                                    </td>
                                    <td>
                                        <input class="form-control input-sm" name="Value{{$index}}" ng-model="type.Value" ng-disabled="!enabledEdit[{{$index}}]" />
                                    </td>
                                    <td>
                                        <div class="">
                                            <a class="" style="cursor:pointer" ng-click="edit($index)">Edit |</a>
                                            <a class="" style="cursor:pointer" ng-click="delete($index)">Delete</a>
                                        </div>
                                    </td>
                                </tr>

                            </tbody>

                        </table>
                        <input type="submit" class="btn btn-primary" value="Submit" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
