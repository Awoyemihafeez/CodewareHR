
@{
    ViewBag.Title = "Indiscipline Type";
    Layout = "~/Views/Shared/_NormalLayout.cshtml";
}

@*<p style="font-size: 22px;">Indiscipline Types</p>*@
<ol class="breadcrumb">
    <li><a href="@Url.Action("Dashboard","Admin")">Home</a></li>
    @*<li><a href="#">Private</a></li>*@
    @*<li><a href="#">Pictures</a></li>*@
    <li class="active">Complaint</li>
    <li class="active">Indiscipline Types</li>
</ol>
<section class="container-fluid">
    <div class="container-fluid">
        <div class="">
            @*<div class="panel-heading">
                <p class="">Indiscipline Types</p>
            </div>*@
            <div class="">
                <div ng-controller="IndisciplineTypeController" ng-init="init()" >
                    <button type="button" id="Mexico" style="float:right;margin-bottom: 10px;" class="btn btn-info btn-sm" ng-click="addGrievanceType()">Add Indiscipline Type</button>
                    <style>
                        #myTable input, #myTable select {
                            border: none;
                            outline: none;
                            box-shadow: none;
                            background-color: inherit;
                            padding: 0;
                            margin: 0;
                        }
                    </style>
                    <form id="empform" ng-submit="submitGrievanceTypes()">
                        <table id="mytable" class="table table-striped" style="border:1px solid lightgrey;font-size:90%">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Code</th>
                                    <th>Description</th>
                                    <th>Modification</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="type in grievanceTypes">
                                    <td>{{$index+1}}</td>
                                    <td>
                                        <input class="form-control input-sm" name="Code{{$index}}" ng-model="type.Code"
                                               ng-disabled="!enabledEdit[{{$index}}]" />
                                    </td>
                                    <td>
                                        <input class="form-control input-sm" name="Description{{$index}}" ng-model="type.Description" ng-disabled="!enabledEdit[{{$index}}]" />
                                    </td>
                                    <td>
                                        <div class="">
                                            <a class="" style="cursor:pointer" ng-click="edit($index)">Edit |</a>
                                            <a class="" style="cursor:pointer" ng-click="delete($index)">Delete</a>
                                        </div>
                                    </td>
                                </tr>

                            </tbody>

                        </table>
                        <input type="submit" class="btn btn-primary" value="Submit" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

