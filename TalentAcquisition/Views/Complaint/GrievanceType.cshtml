
@{
    ViewBag.Title = "Grievance Type";
    Layout = "~/Views/Shared/_NormalLayout.cshtml";
}


@*<p style="font-size: 22px;">Grievance Types</p>*@
<ol class="breadcrumb">
    <li><a href="@Url.Action("Dashboard","Admin")">Home</a></li>
    @*<li><a href="#">Private</a></li>*@
    @*<li><a href="#">Pictures</a></li>*@
    <li class="active">Complaint</li>
    <li class="active">Grievance Types</li>
</ol>
<section class="container-fluid">
    <div class="container-fluid">
        <div class="">
            @*<div class="">
                <p class="">Grievance Types</p>
            </div>*@
            <div class="">
                <div ng-controller="GrievanceTypeController" ng-init="init()" class="row container">
                    <button type="button" id="Mexico" style="float:right;margin-bottom: 10px;" class="btn btn-info btn-sm" ng-click="addGrievanceType()">Add Grievance Type</button>
              
                     <form id="empform" ng-submit="submitGrievanceTypes()">
                            <table id="mytable" class="table table-striped" style="border:1px solid lightgrey">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Code</th>
                                        <th @*style="width:50%"*@>Description</th>
                                        <th>Modification</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="type in grievanceTypes">
                                        <td>{{$index+1}}</td>
                                        <td>
                                            <input class="form-control input-sm" name="Code{{$index}}" ng-model="type.Code"
                                                   ng-disabled="!enabledEdit[{{$index}}]" />
                                        </td>
                                        <td>
                                            <input class="form-control input-sm" name="Description{{$index}}" ng-model="type.Description" ng-disabled="!enabledEdit[{{$index}}]" />
                                        </td>
                                        <td>
                                            <div class="">
                                                <a class="" ng-click="edit($index)" style="cursor:pointer">Edit |</a>
                                                <a class="" ng-click="delete($index)" style="cursor:pointer">Delete</a>
                                            </div>
                                        </td>
                                    </tr>

                                </tbody>

                            </table>
                            <input type="submit" class="btn btn-primary" value="Submit" />
                        </form>
                    </div>
            </div>
        </div>
    </div>
</section>